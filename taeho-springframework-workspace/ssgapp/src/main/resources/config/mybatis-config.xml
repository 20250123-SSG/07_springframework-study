<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

  <settings>
    <!-- DB에 insert시 값이 없는 컬럼을 공백이 아닌 NULL로 insert 되도록-->
    <setting name="jdbcTypeForNull" value="NULL"/>
  </settings>

  <typeAliases>
    <typeAlias type="com.ssg.app.dto.UserDto" alias="UserDto"/>
    <typeAlias type="com.ssg.app.dto.AttachDto" alias="AttachDto"/>
    <typeAlias type="com.ssg.app.dto.BoardDto" alias="BoardDto"/>
    <typeAlias type="com.ssg.app.dto.ReplyDto" alias="ReplyDto"/>
  </typeAliases>

</configuration>